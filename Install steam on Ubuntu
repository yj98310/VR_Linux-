1. sudo add-apt-repository multiverse
2. sudo apt-get update
3. sudo dpkg --add-architecture i386 
4. sudo apt-get install gdebi
5. sudo apt-get update 
6. sudo apt-get install wget gdebi libgl-mesa-dri : i386 libgl1-mesa-glx : i386 libc6 : i386
7. wget http://media.steampowered.com/client/installer/steam.deb
8. sudo gdebi steam.deb
